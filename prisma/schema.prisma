// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  name          String
  email         String?  @unique
  avatar        String?
  points        Int      @default(50)
  gold          Int      @default(50)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  statusHistory StatusHistory[]
  workstations  UserWorkstation[]
  workSessions  WorkSession[]
  timeTracking  TimeTracking[]
  
  @@map("users")
}

model StatusHistory {
  id          Int      @id @default(autoincrement())
  userId      String
  status      String
  type        String
  emoji       String?
  message     String?
  timestamp   DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("status_history")
}

model Workstation {
  id         Int      @id @default(autoincrement())
  name       String
  xPosition  Int
  yPosition  Int
  isOccupied Boolean  @default(false)
  createdAt DateTime @default(now())
  
  @@map("workstations")
}

model UserWorkstation {
  id            Int       @id @default(autoincrement())
  userId        String
  workstationId Int
  cost          Int       @default(0)
  boundAt       DateTime  @default(now())
  
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, workstationId])
  @@map("user_workstations")
}

// 工作会话表 - 记录每次上班到下班的完整会话
model WorkSession {
  id            Int       @id @default(autoincrement())
  userId        String
  workstationId String?   // 绑定的工位ID（可能为空）
  startTime     DateTime  @default(now())
  endTime       DateTime? // 下班时间，为空表示还在上班中
  totalMinutes  Int?      // 总工作时长（分钟），下班时计算
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("work_sessions")
}

// 时间统计表 - 记录各种活动的时间片段
model TimeTracking {
  id          Int      @id @default(autoincrement())
  userId      String
  activityType String  // 活动类型：working, break, reading, restroom, meeting, lunch, off_work
  startTime   DateTime @default(now())
  endTime     DateTime?
  duration    Int?     // 持续时长（分钟），结束时计算
  date        DateTime @default(now()) // 用于按日期查询统计
  workstationId String? // 相关的工位ID
  notes       String?  // 备注信息
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, date])
  @@index([userId, activityType])
  @@map("time_tracking")
}
